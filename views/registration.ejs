<%- include('./parts/header.ejs') %> 
<%- include('./parts/navbar.ejs') %> 
    <main class="mt-4">
        <div class="container">
            <h1 class="mt-5 mb-4 text-center">Registration</h1>
            <form autocomplete="off" action="/registration" method="POST" class="w-50 mx-auto">
                <% if(error){ %> 
                    <div class="alert alert-danger"><%= error %> </div>
                <%}%>
                  <div class="form-floating mb-3">
                    <input name="email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com" required>
                    <label for="floatingInput">Email address</label>
                  </div>
                  <div class="form-floating mb-3">
                    <input name="name" minlength="3" maxlength="32" type="name" class="form-control" id="floatingName" placeholder="Samandar" required>
                    <label for="floatingName">Name</label>
                  </div>
                  <div class="form-floating">
                    <input name="password" minlength="6" type="password" class="form-control" id="floatingPassword" placeholder="Password" required>
                    <label for="floatingPassword">Password</label>
                  </div>
                  <button type="submit" class="mt-3 btn btn-primary w-100">Register</button>  
            </form>
        </div>
    </main>
<%- include('./parts/footer.ejs') %> 
